{
  "compilerOptions": {
    "target": "ESNext",
    "module": "es2020", // Match your current JS system
    "moduleResolution": "node",
    "allowJs": true,     // Critical for mixed codebase
    "checkJs": true,     // Optional: type-check JS files
    "outDir": "./dist",
    "rootDir": "./",
    "strict": false,     // Start loose, enable gradually
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "input", "output"]
}